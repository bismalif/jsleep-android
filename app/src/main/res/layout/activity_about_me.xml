    <LinearLayout
        android:id="@+id/cardAccount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="17dp"
            android:baselineAligned="false"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/backAboutMe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_arrow_left"
                android:paddingStart="20dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:fontFamily="@font/urbanist_bold"
                app:layout_constraintStart_toEndOf="@id/backAboutMe"
                app:layout_constraintTop_toTopOf="parent"
                android:text="Profile"
                android:textColor="@color/white"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/logOutButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="30dp"
                android:layout_marginTop="7dp"
                android:fontFamily="@font/urbanist_medium"
                android:drawableStart="@drawable/icon_logout"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:text="Logout"
                android:drawablePadding="10dp"
                android:textColor="@color/red_out"
                android:textSize="20dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="127dp"
            android:layout_marginTop="25dp"
            android:src="@drawable/ui_user_profile" />

        <TextView
            android:id="@+id/detailName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="7dp"
            android:background="@android:color/transparent"
            android:ems="10"
            android:fontFamily="@font/urbanist_bold"
            android:inputType="textPersonName"
            android:text="Bisma Alif"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/detailEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:ems="10"
            android:fontFamily="@font/urbanist_medium"
            android:inputType="textEmailAddress"
            android:text="bismaalif@gmail.com"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="15dp" />

        <LinearLayout
            android:id="@+id/layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="30dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/urbanist_bold"
                android:text="Current Balance "
                android:textColor="@color/white"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/detailBalance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:ems="10"
                android:fontFamily="@font/urbanist_bold"
                android:inputType="numberDecimal"
                android:textAlignment="textEnd"
                android:textColor="@color/white"
                android:textSize="15dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/topuplayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"></LinearLayout>

        <EditText
            android:id="@+id/Topuptxt"
            android:layout_width="350dp"
            android:layout_height="56dp"
            android:layout_gravity="center"
            android:layout_marginTop="17dp"
            android:background="@drawable/rounded_textview"
            android:ems="10"
            android:fontFamily="@font/urbanist_semibold"
            android:hint="Enter your top up amount"
            android:inputType="textEmailAddress"
            android:paddingStart="20dp"
            android:textColor="@color/white"
            android:textColorHint="@color/dark_grey_hint"
            android:textSize="15dp" />

        <Button
            android:id="@+id/topUpBtn"
            android:layout_width="350dp"
            android:layout_height="57dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/green_button"
            android:fontFamily="@font/urbanist_bold"
            android:text="Top Up"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="18sp"
            app:cornerRadius="50dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/registerRenter"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardAccount">

        <TextView
            android:id="@+id/textViewRent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="25dp"
            android:fontFamily="@font/urbanist_bold"
            android:text="Renter"
            android:textColor="@color/white"
            android:textSize="23dp" />

        <Button
            android:id="@+id/buttonRegisterRenter"
            android:layout_width="350dp"
            android:layout_height="57dp"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:backgroundTint="@color/green_button"
            android:fontFamily="@font/urbanist_bold"
            android:text="Register Renter"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="18sp"
            app:cornerRadius="50dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/cardRegisterRenter"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:orientation="vertical"
        android:visibility="gone"
